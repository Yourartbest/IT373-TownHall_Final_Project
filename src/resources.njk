<script>
  // Resources page filtering
  document.addEventListener('DOMContentLoaded', function() {
    const categoryButtons = document.querySelectorAll('.category-filter');
    const audienceButtons = document.querySelectorAll('.audience-filter');
    const resourceCards = document.querySelectorAll('.resource-card-item');
    
    let activeCategory = 'all';
    let activeAudience = 'all';
    
    // Category filter
    categoryButtons.forEach(button => {
      button.addEventListener('click', function() {
        activeCategory = this.getAttribute('data-category');
        
        // Update button states
        categoryButtons.forEach(btn => {
          btn.classList.remove('btn-primary');
          btn.classList.add('btn-outline');
        });
        this.classList.remove('btn-outline');
        this.classList.add('btn-primary');
        
        filterResources();
      });
    });
    
    // Audience filter
    audienceButtons.forEach(button => {
      button.addEventListener('click', function() {
        activeAudience = this.getAttribute('data-audience');
        
        // Update button states
        audienceButtons.forEach(btn => {
          btn.classList.remove('btn-primary');
          btn.classList.add('btn-outline');
        });
        this.classList.remove('btn-outline');
        this.classList.add('btn-primary');
        
        filterResources();
      });
    });
    
    // Filter function
    function filterResources() {
      let visibleCount = 0;
      
      resourceCards.forEach(card => {
        const category = card.getAttribute('data-category');
        const audience = card.getAttribute('data-audience');
        
        const categoryMatch = activeCategory === 'all' || category === activeCategory;
        const audienceMatch = activeAudience === 'all' || audience === activeAudience;
        
        if (categoryMatch && audienceMatch) {
          card.style.display = '';
          visibleCount++;
        } else {
          card.style.display = 'none';
        }
      });
      
      // Update resource count
      const countElement = document.querySelector('[style*="RESOURCES"]');
      if (countElement) {
        countElement.querySelector('span').textContent = visibleCount + ' RESOURCES';
      }
    }
  });
</script>

