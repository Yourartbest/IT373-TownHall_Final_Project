<section
  class="events"
  aria-labelledby="filter-heading"
  style="padding: var(--grid-16) 0; background: var(--color-white)"
>
  <div class="container">
    {# Neo-Minimalist Filter Bar #}
    <div
      style="
        background: var(--color-gray-50);
        padding: var(--grid-6);
        border-radius: var(--radius-xl);
        margin-bottom: var(--grid-12);
      "
    >
      <h3
        style="
          font-weight: 600;
          font-size: var(--text-lg);
          margin-bottom: var(--grid-4);
          color: var(--color-gray-900);
        "
      >
        Filter events
      </h3>
      <div style="display: flex; gap: var(--grid-2); flex-wrap: wrap">
        <button class="btn btn-primary btn-small" data-filter="all">All</button>
        <button class="btn btn-accent btn-small" data-filter="beginner">Beginner-friendly</button>
        <button class="btn btn-accent btn-small" data-filter="family">Family-friendly</button>
        <button class="btn btn-accent btn-small" data-filter="educators">Educators</button>
        <button class="btn btn-accent btn-small" data-filter="youth">Youth</button>
        <button class="btn btn-accent btn-small" data-filter="volunteer">Volunteer</button>
      </div>
    </div>

    {# Event Count #}
    <div
      style="display: flex; align-items: center; gap: var(--grid-2); margin-bottom: var(--grid-8)"
    >
      <span style="font-weight: 600; font-size: var(--text-lg); color: var(--color-gray-900)"
        >{{ allEvents.length }} events</span
      >
    </div>
    {% if allEvents.length > 0 %}
    <div
      style="
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: var(--grid-6);
      "
    >
      {% for event in allEvents %}
      <article
        class="event-card-item"
        style="
          padding: var(--grid-6);
          display: flex;
          flex-direction: column;
          background: white;
          border-radius: var(--radius-xl);
          box-shadow: var(--shadow-md);
          transition: all var(--transition-base);
        "
        data-difficulty="{{ event.difficultyLevel | lower }}"
        data-tags="{% if event.audienceTag %}{{ event.audienceTag | join(',') | lower }}{% endif %}"
        onmouseover="
          this.style.boxShadow = 'var(--shadow-lg)'
          this.style.transform = 'translateY(-4px)'
        "
        onmouseout="
          this.style.boxShadow = 'var(--shadow-md)'
          this.style.transform = ''
        "
      >
        {# Date and Location #}
        <div style="margin-bottom: var(--grid-4)">
          <div
            style="
              display: flex;
              align-items: center;
              gap: var(--grid-2);
              margin-bottom: var(--grid-2);
            "
          >
            <span style="font-size: var(--text-sm); color: var(--color-gray-600)"
              >üìÖ {{ event.date | dateFormat }}</span
            >
          </div>
          <div style="display: flex; align-items: center; gap: var(--grid-2)">
            <span style="font-size: var(--text-sm); color: var(--color-gray-600)"
              >üìç {{ event.location or "Newark Public Library" }}</span
            >
          </div>
        </div>

        {# Difficulty Badge #} {% if event.difficultyLevel %}
        <div style="margin-bottom: var(--grid-4)">
          <span
            style="
              background: var(--color-accent);
              color: white;
              padding: 4px 12px;
              border-radius: var(--radius-full);
              font-size: var(--text-xs);
              font-weight: 500;
            "
          >
            {{ event.difficultyLevel }}-friendly
          </span>
        </div>
        {% endif %} {# Title #}
        <h3
          style="
            font-size: var(--text-xl);
            font-weight: 600;
            margin-bottom: var(--grid-3);
            line-height: 1.3;
            color: var(--color-gray-900);
          "
        >
          {{ event.title }}
        </h3>

        {# Description #}
        <p
          style="
            font-size: var(--text-sm);
            line-height: 1.6;
            margin-bottom: var(--grid-4);
            flex-grow: 1;
            color: var(--color-gray-600);
          "
        >
          {{ event.description }}
        </p>

        {# Tags #}
        <div
          style="display: flex; gap: var(--grid-2); flex-wrap: wrap; margin-bottom: var(--grid-4)"
        >
          {% if event.difficultyLevel %}
          <span
            style="
              background: var(--color-gray-100);
              padding: 4px 10px;
              font-size: var(--text-xs);
              font-weight: 500;
              border-radius: var(--radius-full);
              color: var(--color-gray-700);
            "
          >
            {{ event.difficultyLevel }}
          </span>
          {% endif %} {% if event.audienceTag and event.audienceTag.length > 0 %} {% for tag in
          event.audienceTag %}
          <span
            style="
              background: var(--color-gray-100);
              padding: 4px 10px;
              font-size: var(--text-xs);
              font-weight: 500;
              border-radius: var(--radius-full);
              color: var(--color-gray-700);
            "
          >
            {{ tag }}
          </span>
          {% endfor %} {% endif %}
        </div>

        {# Action Buttons #}
        <div
          style="
            display: flex;
            gap: var(--grid-3);
            padding-top: var(--grid-4);
            border-top: 1px solid var(--color-gray-200);
          "
        >
          <a
            href="{{ ('/events/' ~ event.slug ~ '/') | url }}"
            style="
              color: var(--color-accent);
              font-weight: 500;
              font-size: var(--text-sm);
              text-decoration: none;
            "
            onmouseover="this.style.textDecoration = 'underline'"
            onmouseout="this.style.textDecoration = 'none'"
          >
            View details ‚Üí
          </a>
          <a
            href="{{ ('/events/' ~ event.slug ~ '/') | url }}"
            class="btn btn-primary btn-small"
            style="margin-left: auto"
          >
            Register
          </a>
        </div>
      </article>
      {% endfor %}
    </div>
    {% else %}
    <div
      style="
        background: var(--color-gray-50);
        border-radius: var(--radius-2xl);
        padding: var(--grid-16);
        text-align: center;
      "
    >
      <p
        style="
          font-size: var(--text-lg);
          margin-bottom: var(--grid-4);
          color: var(--color-gray-900);
          font-weight: 600;
        "
      >
        No upcoming events scheduled yet.
      </p>
      <p style="color: var(--color-gray-600)">
        Check back soon or
        <a href="/volunteer/" style="color: var(--color-accent); font-weight: 500"
          >volunteer to help organize</a
        >!
      </p>
    </div>
    {% endif %}
  </div>
</section>
