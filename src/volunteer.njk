<section id="volunteer-form" class="py-16 bg-bauhaus-blue text-white">
  <div class="container">
    <div class="max-w-2xl mx-auto">
      <h2 class="text-4xl font-bold mb-6 uppercase text-center">Volunteer Application</h2>
      <p class="text-xl mb-8 text-center">
        Fill out the form below and we'll be in touch within 48 hours.
      </p>

      <form class="space-y-6 bg-white text-black p-8">
        <div>
          <label for="name" class="block font-bold mb-2 uppercase">Full Name *</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full border-2 border-black p-3 focus:outline-none focus:border-bauhaus-blue"
          />
        </div>

        <div>
          <label for="email" class="block font-bold mb-2 uppercase">Email *</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full border-2 border-black p-3 focus:outline-none focus:border-bauhaus-blue"
          />
        </div>

        <div>
          <label for="phone" class="block font-bold mb-2 uppercase">Phone Number</label>
          <input
            type="tel"
            id="phone"
            name="phone"
            class="w-full border-2 border-black p-3 focus:outline-none focus:border-bauhaus-blue"
          />
        </div>

        <div>
          <label for="role" class="block font-bold mb-2 uppercase">
            Interested Role(s) *
          </label>
          <select
            id="role"
            name="role"
            required
            class="w-full border-2 border-black p-3 focus:outline-none focus:border-bauhaus-blue"
          >
            <option value="">Select a role...</option>
            <option value="facilitator">Workshop Facilitator</option>
            <option value="ambassador">Community Ambassador</option>
            <option value="content">Content Creator</option>
            <option value="coordinator">Event Coordinator</option>
            <option value="other">Other</option>
          </select>
        </div>

        <div>
          <label for="experience" class="block font-bold mb-2 uppercase">
            Relevant Experience
          </label>
          <textarea
            id="experience"
            name="experience"
            rows="4"
            class="w-full border-2 border-black p-3 focus:outline-none focus:border-bauhaus-blue"
            placeholder="Tell us about your background and why you want to volunteer..."
          ></textarea>
        </div>

        <div>
          <label for="availability" class="block font-bold mb-2 uppercase">
            Availability
          </label>
          <textarea
            id="availability"
            name="availability"
            rows="2"
            class="w-full border-2 border-black p-3 focus:outline-none focus:border-bauhaus-blue"
            placeholder="What days/times work best for you?"
          ></textarea>
        </div>

        <button
          type="submit"
          class="w-full bg-black text-white px-8 py-4 font-bold uppercase hover:bg-bauhaus-red transition-colors"
        >
          Submit Application
        </button>
      </form>
    </div>
