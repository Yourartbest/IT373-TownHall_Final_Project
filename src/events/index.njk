---
layout: layouts/base.njk
title: 'Town Hall Events'
description: 'Register for upcoming Newark AI Town Hall events. Plain-language sessions for residents, educators, and volunteers.'
---

<section style="padding: var(--grid-8) 0; background: white">
  <div class="container">
    {# Filter Bar #}
    <div style="margin-bottom: var(--grid-6)">
      <div
        style="display: flex; align-items: center; gap: var(--grid-2); margin-bottom: var(--grid-3)"
      >
        <div
          style="
            width: 40px;
            height: 40px;
            background: var(--color-bauhaus-yellow);
            border: var(--border-width) solid var(--color-black);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
          "
        >
          ‚ñº
        </div>
        <span style="font-weight: 700; text-transform: uppercase; letter-spacing: 0.05em"
          >FILTER EVENTS</span
        >
      </div>
      <div style="display: flex; gap: var(--grid-2); flex-wrap: wrap">
        <button
          class="btn btn-primary"
          data-filter="all"
          style="padding: var(--grid-2) var(--grid-3); min-height: auto"
        >
          ALL
        </button>
        <button
          class="btn btn-outline"
          data-filter="beginner"
          style="padding: var(--grid-2) var(--grid-3); min-height: auto"
        >
          BEGINNER-FRIENDLY
        </button>
        <button
          class="btn btn-outline"
          data-filter="family"
          style="padding: var(--grid-2) var(--grid-3); min-height: auto"
        >
          FAMILY-FRIENDLY
        </button>
        <button
          class="btn btn-outline"
          data-filter="educators"
          style="padding: var(--grid-2) var(--grid-3); min-height: auto"
        >
          EDUCATORS
        </button>
        <button
          class="btn btn-outline"
          data-filter="youth"
          style="padding: var(--grid-2) var(--grid-3); min-height: auto"
        >
          YOUTH
        </button>
        <button
          class="btn btn-outline"
          data-filter="volunteer"
          style="padding: var(--grid-2) var(--grid-3); min-height: auto"
        >
          VOLUNTEER
        </button>
      </div>
    </div>

    {% if allEvents.length > 0 %} {# Events Grid #}
    <div
      id="events-grid"
      style="
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: var(--grid-4);
      "
    >
      {% for event in allEvents %}
      <article 
        class="card event-card-item" 
        style="padding: var(--grid-4); display: flex; flex-direction: column"
        data-difficulty="{{ event.difficultyLevel | lower }}"
        data-tags="{% if event.audienceTag %}{{ event.audienceTag | join(',') | lower }}{% endif %}"
      >
        {# Date and Location #}
        <div style="margin-bottom: var(--grid-3)">
          <div
            style="
              display: flex;
              align-items: center;
              gap: var(--grid-2);
              margin-bottom: var(--grid-2);
            "
          >
            <div
              style="
                width: 8px;
                height: 8px;
                background: var(--color-bauhaus-red);
                border-radius: 50%;
              "
            ></div>
            <time datetime="{{ event.date | dateISO }}" style="font-size: 13px"
              >üìÖ {{ event.date | dateFormat }}</time
            >
          </div>
          <div style="display: flex; align-items: center; gap: var(--grid-2)">
            <div
              style="
                width: 8px;
                height: 8px;
                background: var(--color-bauhaus-red);
                border-radius: 50%;
              "
            ></div>
            <span style="font-size: 13px">üìç {{ event.location or "Newark Public Library" }}</span>
          </div>
        </div>

        {# Difficulty Badge #} {% if event.difficultyLevel %}
        <div style="margin-bottom: var(--grid-3)">
          <span
            style="
              background: var(--color-bauhaus-red);
              color: white;
              padding: 6px var(--grid-2);
              text-transform: uppercase;
              font-size: 11px;
              font-weight: 700;
              letter-spacing: 0.05em;
            "
          >
            {{ event.difficultyLevel | upper }}-FRIENDLY
          </span>
        </div>
        {% endif %} {# Title #}
        <h3
          style="
            font-size: 18px;
            font-weight: 700;
            text-transform: uppercase;
            margin-bottom: var(--grid-3);
            line-height: 1.3;
          "
        >
          {{ event.title }}
        </h3>

        {# Description #}
        <p
          style="
            font-size: 14px;
            line-height: 1.6;
            margin-bottom: var(--grid-4);
            flex-grow: 1;
            color: #333;
          "
        >
          {{ event.description }}
        </p>

        {# Tags #}
        <div
          style="display: flex; gap: var(--grid-2); flex-wrap: wrap; margin-bottom: var(--grid-4)"
        >
          {% if event.difficultyLevel %}
          <span
            style="
              border: 2px solid var(--color-black);
              padding: 4px var(--grid-2);
              font-size: 11px;
              font-weight: 700;
              text-transform: uppercase;
            "
          >
            {{ event.difficultyLevel }}
          </span>
          {% endif %} {% if event.audienceTag and event.audienceTag.length > 0 %} {% for tag in
          event.audienceTag %}
          <span
            style="
              border: 2px solid var(--color-black);
              padding: 4px var(--grid-2);
              font-size: 11px;
              font-weight: 700;
              text-transform: uppercase;
            "
          >
            {{ tag }}
          </span>
          {% endfor %} {% endif %}
        </div>

        {# Action Buttons #}
        <div
          style="
            display: flex;
            gap: var(--grid-2);
            padding-top: var(--grid-3);
            border-top: 2px solid #eee;
          "
        >
          <a
            href="/events/{{ event.slug }}/"
            style="
              color: var(--color-bauhaus-blue);
              font-weight: 700;
              font-size: 13px;
              text-decoration: none;
              text-transform: uppercase;
            "
          >
            DETAILS ‚Üí
          </a>
          <a
            href="/events/{{ event.slug }}/"
            class="btn btn-primary"
            style="margin-left: auto; padding: var(--grid-2) var(--grid-4); font-size: 13px"
          >
            REGISTER
          </a>
        </div>
      </article>
      {% endfor %}
    </div>
    {% else %}
    <div
      style="
        background: white;
        border: var(--border-width) solid var(--color-black);
        padding: var(--grid-8);
        text-align: center;
      "
    >
      <p style="font-size: 18px; margin-bottom: var(--grid-3)">No upcoming events scheduled yet.</p>
      <p>
        Check back soon or
        <a href="/volunteer/" style="color: var(--color-bauhaus-blue); font-weight: 700"
          >volunteer to help organize</a
        >!
      </p>
    </div>
    {% endif %}
  </div>
</section>

<script>
  // Events page filtering
  document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('[data-filter]');
    const eventCards = document.querySelectorAll('.event-card-item');
    
    filterButtons.forEach(button => {
      button.addEventListener('click', function() {
        const filter = this.getAttribute('data-filter');
        
        // Update button states
        filterButtons.forEach(btn => {
          btn.classList.remove('btn-primary');
          btn.classList.add('btn-outline');
        });
        this.classList.remove('btn-outline');
        this.classList.add('btn-primary');
        
        // Filter events
        eventCards.forEach(card => {
          if (filter === 'all') {
            card.style.display = '';
          } else {
            const difficulty = card.getAttribute('data-difficulty');
            const tags = card.getAttribute('data-tags');
            
            if (difficulty === filter || (tags && tags.includes(filter))) {
              card.style.display = '';
            } else {
              card.style.display = 'none';
            }
          }
        });
      });
    });
  });
</script>

