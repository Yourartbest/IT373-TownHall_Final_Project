---
layout: layouts/base.njk
pagination:
  data: allEvents
  size: 1
  alias: event
eleventyComputed:
  permalink: '/events/{{ event.slug }}/'
  title: '{{ event.title }} - Newark AI Town Hall'
  description: '{{ event.description }}'
---

{# Neo-Minimalist Hero Section #}
<section
  style="
    padding: var(--grid-16) 0;
    background: linear-gradient(135deg, var(--color-gray-50) 0%, var(--color-white) 100%);
  "
  aria-labelledby="event-hero-heading"
>
  <div class="container">
    {# Breadcrumb #}
    <div style="margin-bottom: var(--grid-8)">
      <a
        href="{{ '/events/' | url }}"
        style="
          color: var(--color-gray-600);
          font-weight: 500;
          text-decoration: none;
          font-size: var(--text-sm);
          display: inline-flex;
          align-items: center;
          gap: var(--grid-2);
          transition: color var(--transition-base);
        "
        onmouseover="this.style.color = 'var(--color-primary)'"
        onmouseout="this.style.color = 'var(--color-gray-600)'"
      >
        <svg width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 6H2M6 12l-4-6 4-6" />
        </svg>
        <span>Back to events</span>
      </a>
    </div>

    <div style="max-width: 800px; margin: 0 auto">
      <h1
        id="event-hero-heading"
        style="
          font-size: clamp(32px, 5vw, 56px);
          line-height: 1.1;
          margin-bottom: var(--grid-8);
          color: var(--color-gray-900);
          font-weight: 600;
          letter-spacing: -0.02em;
          text-align: center;
        "
      >
        {{ event.title }}
      </h1>

      {# Event Meta - Neo-Minimalist Cards #}
      <div
        style="
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
          gap: var(--grid-4);
          margin-bottom: var(--grid-8);
        "
      >
        <div
          style="
            background: white;
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-md);
            padding: var(--grid-5);
            display: flex;
            align-items: center;
            gap: var(--grid-3);
          "
        >
          <div
            style="
              width: 48px;
              height: 48px;
              background: linear-gradient(
                135deg,
                var(--color-accent) 0%,
                var(--color-accent-light) 100%
              );
              border-radius: var(--radius-md);
              display: flex;
              align-items: center;
              justify-content: center;
            "
          >
            <svg width="20" height="20" fill="none" stroke="white" stroke-width="2">
              <rect x="3" y="4" width="14" height="14" rx="2" />
              <path d="M3 9h14M9 4v2M15 4v2" />
            </svg>
          </div>
          <div>
            <div
              style="font-size: var(--text-xs); color: var(--color-gray-500); margin-bottom: 2px"
            >
              Date & Time
            </div>
            <time
              datetime="{{ event.date | dateISO }}"
              style="font-size: var(--text-sm); font-weight: 600; color: var(--color-gray-900)"
              >{{ event.date | dateFormat }}</time
            >
            <div style="font-size: var(--text-xs); color: var(--color-gray-600)">
              2:00 PM - 4:00 PM
            </div>
          </div>
        </div>

        <div
          style="
            background: white;
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-md);
            padding: var(--grid-5);
            display: flex;
            align-items: center;
            gap: var(--grid-3);
          "
        >
          <div
            style="
              width: 48px;
              height: 48px;
              background: linear-gradient(
                135deg,
                var(--color-primary) 0%,
                var(--color-primary-light) 100%
              );
              border-radius: var(--radius-md);
              display: flex;
              align-items: center;
              justify-content: center;
            "
          >
            <svg width="20" height="20" fill="none" stroke="white" stroke-width="2">
              <path
                d="M10 2C7.5 2 5 3.5 5 6c0 4 5 10 5 10s5-6 5-10c0-2.5-2.5-4-5-4zm0 6c-1 0-2-1-2-2s1-2 2-2 2 1 2 2-1 2-2 2z"
              />
            </svg>
          </div>
          <div>
            <div
              style="font-size: var(--text-xs); color: var(--color-gray-500); margin-bottom: 2px"
            >
              Location
            </div>
            <div style="font-size: var(--text-sm); font-weight: 600; color: var(--color-gray-900)">
              {{ event.location or "Newark Public Library" }}
            </div>
          </div>
        </div>

        <div
          style="
            background: white;
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-md);
            padding: var(--grid-5);
            display: flex;
            align-items: center;
            gap: var(--grid-3);
          "
        >
          <div
            style="
              width: 48px;
              height: 48px;
              background: linear-gradient(
                135deg,
                var(--color-accent) 0%,
                var(--color-accent-light) 100%
              );
              border-radius: var(--radius-md);
              display: flex;
              align-items: center;
              justify-content: center;
              font-size: var(--text-xl);
              font-weight: 600;
              color: white;
            "
