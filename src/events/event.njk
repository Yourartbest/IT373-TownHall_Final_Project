---
layout: layouts/base.njk
pagination:
  data: allEvents
  size: 1
  alias: event
eleventyComputed:
  permalink: "/events/{{ event.slug }}/"
  title: '{{ event.title }} - Newark AI Town Hall'
  description: '{{ event.description }}'
---

<section
  class="hero"
  aria-labelledby="event-hero-heading"
  style="padding: var(--grid-6) 0; background: var(--color-white)"
>
  <div class="container">
    <div style="margin-bottom: var(--grid-4)">
      <a
        href="/events/"
        style="
          color: var(--color-bauhaus-blue);
          font-weight: 700;
          text-decoration: none;
          font-size: 14px;
          text-transform: uppercase;
          letter-spacing: 0.05em;
        "
      >
        ← BACK TO EVENTS
      </a>
    </div>

    <div class="accent-bar accent-bar-red" style="margin-bottom: var(--grid-3)"></div>

    <h1
      id="event-hero-heading"
      class="hero-title"
      style="font-size: clamp(28px, 5vw, 42px); margin-bottom: var(--grid-4)"
    >
      {{ event.title }}
    </h1>

    {# Event Meta Information #}
    <div style="display: flex; flex-wrap: wrap; gap: var(--grid-4); margin-bottom: var(--grid-4)">
      <div style="display: flex; align-items: center; gap: var(--grid-2)">
        <div
          style="
            width: 10px;
            height: 10px;
            background: var(--color-bauhaus-red);
            border-radius: 50%;
          "
        ></div>
        <svg width="16" height="16" fill="currentColor" aria-hidden="true" style="opacity: 0.7">
          <rect
            x="2"
            y="3"
            width="12"
            height="11"
            rx="1"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
          />
          <line x1="2" y1="7" x2="14" y2="7" stroke="currentColor" stroke-width="1.5" />
        </svg>
        <time datetime="{{ event.date | dateISO }}" style="font-size: 15px; font-weight: 600">
          {{ event.date | dateFormat }} • 2:00 PM
        </time>
      </div>

      <div style="display: flex; align-items: center; gap: var(--grid-2)">
        <div
          style="
            width: 10px;
            height: 10px;
            background: var(--color-bauhaus-red);
            border-radius: 50%;
          "
        ></div>
        <svg width="16" height="16" fill="currentColor" aria-hidden="true" style="opacity: 0.7">
          <path
            d="M8 2C6 2 4 3.5 4 6c0 3 4 8 4 8s4-5 4-8c0-2.5-2-4-4-4zm0 6c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2z"
          />
        </svg>
        <span style="font-size: 15px; font-weight: 600"
          >{{ event.location or "Newark Public Library" }}</span
        >
      </div>
    </div>

    {# Badges #}
    <div style="display: flex; gap: var(--grid-2); flex-wrap: wrap; margin-bottom: var(--grid-4)">
      {% if event.difficultyLevel %}
      <span
        style="
          background: var(--color-bauhaus-red);
          color: white;
          padding: 8px var(--grid-3);
          text-transform: uppercase;
          font-size: 12px;
          font-weight: 700;
          letter-spacing: 0.05em;
          display: inline-block;
        "
      >
        {{ event.difficultyLevel }}-FRIENDLY
      </span>
      {% endif %} {% if event.audienceTag and event.audienceTag.length > 0 %} {% for tag in
      event.audienceTag %}
      <span
        style="
          background: var(--color-bauhaus-blue);
          color: white;
          padding: 8px var(--grid-3);
          text-transform: uppercase;
          font-size: 12px;
          font-weight: 700;
          letter-spacing: 0.05em;
          display: inline-block;
        "
      >
        {{ tag }}
      </span>
      {% endfor %} {% endif %}
    </div>
  </div>
</section>

<section style="padding: var(--grid-8) 0; background: var(--color-gray-50)">
  <div class="container">
    <div style="display: grid; grid-template-columns: 2fr 1fr; gap: var(--grid-6)">
      {# Main Content #}
      <div>
        {# Description #}
        <div class="card" style="padding: var(--grid-6); margin-bottom: var(--grid-4)">
          <h2
            style="
              font-size: 24px;
              font-weight: 700;
              text-transform: uppercase;
              margin-bottom: var(--grid-4);
              letter-spacing: 0.02em;
            "
          >
            ABOUT THIS EVENT
          </h2>
          <p style="font-size: 16px; line-height: 1.8; color: #333; margin-bottom: var(--grid-4)">
            {{ event.description }}
          </p>

          {% if event.fullDescription %}
          <div style="font-size: 16px; line-height: 1.8; color: #333">
            {% for block in event.fullDescription %} {% if block._type == 'block' %}
            <p style="margin-bottom: var(--grid-3)">
              {% for child in block.children %} {{ child.text }} {% endfor %}
            </p>
            {% endif %} {% endfor %}
          </div>
          {% endif %}
        </div>

        {# What You'll Learn #} {% if event.whatYouWillLearn and event.whatYouWillLearn.length > 0
        %}
        <div class="card" style="padding: var(--grid-6); background: var(--color-bauhaus-yellow)">
          <h2
            style="
              font-size: 24px;
              font-weight: 700;
              text-transform: uppercase;
              margin-bottom: var(--grid-4);
              letter-spacing: 0.02em;
            "
          >
            WHAT YOU'LL LEARN
          </h2>
          <ul style="list-style: none; padding: 0; margin: 0">
            {% for item in event.whatYouWillLearn %}
            <li
              style="
                display: flex;
                align-items: start;
                gap: var(--grid-2);
                margin-bottom: var(--grid-3);
                font-size: 16px;
                line-height: 1.6;
              "
            >
              <span style="color: var(--color-bauhaus-blue); font-weight: 700; font-size: 20px"
                >✓</span
              >
              <span>{{ item }}</span>
            </li>
            {% endfor %}
          </ul>
        </div>
        {% endif %}
      </div>

      {# Sidebar #}
      <div>
        {# Registration Card #}
        <div
          class="card"
          style="padding: var(--grid-5); background: white; position: sticky; top: var(--grid-4)"
        >
          <h3
            style="
              font-size: 20px;
              font-weight: 700;
              text-transform: uppercase;
              margin-bottom: var(--grid-3);
              letter-spacing: 0.02em;
            "
          >
            REGISTER NOW
          </h3>

          {% if event.registrationOpen %}
          <p style="font-size: 14px; line-height: 1.6; margin-bottom: var(--grid-4); color: #555">
            This event is free and open to all Newark community members. No technical background
            required.
          </p>

          {% if event.maxAttendees %}
          <div
            style="
              background: var(--color-gray-50);
              border-left: 4px solid var(--color-bauhaus-yellow);
              padding: var(--grid-3);
              margin-bottom: var(--grid-4);
            "
          >
            <p style="font-size: 13px; margin: 0">
              <strong>Limited spots:</strong> {{ event.maxAttendees }} attendees max
            </p>
          </div>
          {% endif %}

          <a
            href="#register-form"
            class="btn btn-primary"
            style="
              width: 100%;
              text-align: center;
              display: block;
              padding: var(--grid-3);
              font-size: 15px;
            "
          >
            REGISTER FOR THIS EVENT
          </a>

          <div
            style="
              margin-top: var(--grid-4);
              padding-top: var(--grid-4);
              border-top: 2px solid var(--color-gray-100);
            "
          >
            <p style="font-size: 13px; color: #666; margin-bottom: var(--grid-2)">
              <strong>Have questions?</strong>
            </p>
            <a
              href="https://discord.gg/newark-ai"
              target="_blank"
              rel="noopener noreferrer"
              style="
                color: var(--color-bauhaus-blue);
                font-weight: 700;
                text-decoration: none;
                font-size: 13px;
              "
            >
              Ask in our Discord →
            </a>
          </div>
          {% else %}
          <div
            style="
              background: var(--color-gray-100);
              padding: var(--grid-4);
              border-left: 4px solid #999;
            "
          >
            <p style="font-size: 14px; margin: 0; color: #555">
              Registration is currently closed for this event. Check back soon or join our Discord
              for updates.
            </p>
          </div>
          {% endif %}
        </div>

        {# Quick Info Card #}
        <div
          class="card"
          style="
            padding: var(--grid-5);
            background: var(--color-bauhaus-blue);
            color: white;
            margin-top: var(--grid-4);
          "
        >
          <h3
            style="
              font-size: 18px;
              font-weight: 700;
              text-transform: uppercase;
              margin-bottom: var(--grid-3);
              letter-spacing: 0.02em;
            "
          >
            QUICK INFO
          </h3>

          <div style="display: flex; flex-direction: column; gap: var(--grid-3); font-size: 14px">
            <div>
              <p
                style="
                  opacity: 0.9;
                  margin-bottom: 4px;
                  font-size: 12px;
                  text-transform: uppercase;
                  letter-spacing: 0.05em;
                "
              >
                Cost
              </p>
              <p style="font-weight: 700; margin: 0">100% FREE</p>
            </div>

            {% if event.difficultyLevel %}
            <div>
              <p
                style="
                  opacity: 0.9;
                  margin-bottom: 4px;
                  font-size: 12px;
                  text-transform: uppercase;
                  letter-spacing: 0.05em;
                "
              >
                Level
              </p>
              <p style="font-weight: 700; margin: 0">{{ event.difficultyLevel | capitalize }}</p>
            </div>
            {% endif %}

            <div>
              <p
                style="
                  opacity: 0.9;
                  margin-bottom: 4px;
                  font-size: 12px;
                  text-transform: uppercase;
                  letter-spacing: 0.05em;
                "
              >
                Duration
              </p>
              <p style="font-weight: 700; margin: 0">2 hours</p>
            </div>

            <div>
              <p
                style="
                  opacity: 0.9;
                  margin-bottom: 4px;
                  font-size: 12px;
                  text-transform: uppercase;
                  letter-spacing: 0.05em;
                "
              >
                Language
              </p>
              <p style="font-weight: 700; margin: 0">English</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
