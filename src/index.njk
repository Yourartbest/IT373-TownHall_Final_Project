{# Events Section - Inspired by design #}
<section id="events" class="events" aria-labelledby="events-heading">
  <div class="container">
    <div class="accent-bar"></div>
    <h2 id="events-heading" class="section-heading">UPCOMING EVENTS</h2>
    <p style="margin-bottom: var(--grid-6)">Join us for free community learning sessions.</p>

    {% if events.length > 0 %}
    <div class="events-grid">
      {% for event in events %}
      <article class="event-card" aria-labelledby="event-{{ loop.index }}-title">
        <div class="event-card-content">
          <h3 id="event-{{ loop.index }}-title" class="event-card-title">{{ event.title }}</h3>

          <div class="event-card-meta">
            <p>
              üìÖ <time datetime="{{ event.date | dateISO }}">{{ event.date | dateFormat }}</time>
            </p>
            <p>üìç {{ event.location or "Newark Public Library" }}</p>
          </div>

          {% if event.difficultyLevel %}
          <span class="badge badge-{{ event.difficultyLevel }}">{{ event.difficultyLevel }}</span>
          {% endif %}

          <p class="event-card-description">{{ event.description }}</p>

          <div style="display: flex; gap: var(--grid-2); margin-top: var(--grid-3)">
            <a href="/events/{{ event.slug }}/" class="btn btn-outline">DETAILS</a>
            <a href="/events/{{ event.slug }}/" class="btn btn-primary">REGISTER</a>
          </div>
        </div>
      </article>
      {% endfor %}
    </div>
    {% else %}
    <div class="events-empty">
      <p>
        No upcoming events scheduled yet. Check back soon or
        <a href="/volunteer/">volunteer to help organize</a>!
      </p>
    </div>
    {% endif %}

    <div class="events-footer">
      <a href="{{ '/events/' | url }}" class="btn btn-outline">VIEW ALL EVENTS</a>
    </div>
  </div>
</section>

