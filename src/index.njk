              <rect x="3" y="4" width="14" height="14" rx="2"/>
              <path d="M3 9h14M9 4v2M15 4v2"/>
            </svg>
            <time datetime="{{ event.date | dateISO }}" style="font-size: var(--text-xs); font-weight: 500; color: var(--color-gray-700);">{{ event.date | dateFormat }}</time>
          </div>
          
          <h3 id="event-{{ loop.index }}-title" style="font-size: var(--text-xl); margin-bottom: var(--grid-3); font-weight: 600; line-height: 1.3; color: var(--color-gray-900);">{{ event.title }}</h3>

          <div style="display: flex; align-items: center; gap: var(--grid-2); margin-bottom: var(--grid-4); color: var(--color-gray-600);">
            <svg width="14" height="14" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M7 1C5 1 3 2 3 4c0 3 4 7 4 7s4-4 4-7c0-2-2-3-4-3zm0 4c-.5 0-1-.5-1-1s.5-1 1-1 1 .5 1 1-.5 1-1 1z"/>
            </svg>
            <span style="font-size: var(--text-sm); color: var(--color-gray-600);">{{ event.location or "Newark Public Library" }}</span>
          </div>

          {% if event.difficultyLevel %}
          <div style="display: inline-block; background: var(--color-accent-subtle); color: var(--color-accent); padding: 4px 12px; border-radius: var(--radius-full); font-size: var(--text-xs); font-weight: 500; margin-bottom: var(--grid-4);">{{ event.difficultyLevel | capitalize }}-friendly</div>
          {% endif %}

          <p style="font-size: var(--text-sm); line-height: 1.6; color: var(--color-gray-600); margin-bottom: var(--grid-5);">{{ event.description }}</p>

          <div style="display: flex; gap: var(--grid-3);">
            <a href="{{ '/events/' + event.slug + '/' | url }}" style="flex: 1; text-align: center;" class="btn btn-primary btn-small">Register</a>
            <a href="{{ '/events/' + event.slug + '/' | url }}" style="color: var(--color-accent); font-weight: 500; text-decoration: none; display: flex; align-items: center; gap: 6px; font-size: var(--text-sm); transition: color var(--transition-base); padding: var(--grid-2);" onmouseover="this.style.color='var(--color-primary)';" onmouseout="this.style.color='var(--color-accent)';">Details <svg width="14" height="14" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 10l3-3-3-3"/></svg></a>
          </div>
        </div>
      </article>
      {% endfor %}
    </div>
    {% else %}
    <div style="background: var(--color-gray-50); padding: var(--grid-16); border-radius: var(--radius-2xl); text-align: center;">
      <div style="width: 80px; height: 80px; background: var(--color-gray-200); border-radius: var(--radius-xl); margin: 0 auto var(--grid-5); display: flex; align-items: center; justify-content: center; font-size: 40px;">üìÖ</div>
