      <a href="{{ '/events/' | url }}" class="btn btn-secondary">View all events</a>
    </div>

    {% if events.length > 0 %}
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(360px, 1fr)); gap: var(--grid-6);">
      {% for event in events %}
      <article style="background: white; border-radius: var(--radius-xl); overflow: hidden; box-shadow: var(--shadow-md); transition: all var(--transition-base);" aria-labelledby="event-{{ loop.index }}-title" onmouseover="this.style.boxShadow='var(--shadow-lg)'; this.style.transform='translateY(-4px)';" onmouseout="this.style.boxShadow='var(--shadow-md)'; this.style.transform='';">
